{
  "name": "boid-wasm-sim",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel dev",
    "build": "pnpm build:deps && pnpm build:web",
    "build:deps": "pnpm components:build && pnpm wasm:build",
    "build:web": "pnpm --filter @boid-wasm-sim/web build:only",
    "build:all": "pnpm --filter @boid-wasm-sim/components build && pnpm --filter @boid-wasm-sim/wasm build && pnpm --filter @boid-wasm-sim/web build:only",
    "clean": "pnpm --recursive clean",
    "rebuild": "pnpm clean && pnpm build",
    "components:build": "pnpm --filter @boid-wasm-sim/components build",
    "components:dev": "pnpm --filter @boid-wasm-sim/components dev",
    "components:test": "pnpm --filter @boid-wasm-sim/components test",
    "components:clean": "pnpm --filter @boid-wasm-sim/components clean",
    "wasm:build": "pnpm --filter @boid-wasm-sim/wasm build",
    "wasm:build:debug": "pnpm --filter @boid-wasm-sim/wasm build:debug",
    "wasm:build:watch": "pnpm --filter @boid-wasm-sim/wasm build:watch",
    "wasm:dev": "pnpm --filter @boid-wasm-sim/wasm dev",
    "wasm:test": "pnpm --filter @boid-wasm-sim/wasm test",
    "wasm:clean": "pnpm --filter @boid-wasm-sim/wasm clean",
    "web:dev": "pnpm --filter @boid-wasm-sim/web dev",
    "web:build": "pnpm --filter @boid-wasm-sim/web build",
    "web:preview": "pnpm --filter @boid-wasm-sim/web preview",
    "web:test": "pnpm --filter @boid-wasm-sim/web test",
    "test": "pnpm components:test && pnpm web:test",
    "test:all": "pnpm components:test && pnpm wasm:test && pnpm web:test",
    "typecheck": "pnpm --recursive typecheck",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "typescript": "^5.8.3",
    "@biomejs/biome": "2.1.1"
  }
}