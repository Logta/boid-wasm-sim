{
  "name": "boid-wasm-sim",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel dev",
    "build": "pnpm --filter wasm build && pnpm --filter @boid-wasm-sim/web build",
    "wasm:build": "pnpm --filter wasm build",
    "web:dev": "pnpm --filter @boid-wasm-sim/web dev",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "typescript": "^5.8.3",
    "@biomejs/biome": "2.1.1"
  }
}